import java.util.*;

class Solution {
    public int longestConsecutive(int[] nums) {

        Set<Integer> st = new HashSet<>();

        for (int i = 0; i < nums.length; i++) {
            st.add(nums[i]);
        }

        int longest = 0;

        for (int it : st) {

            if (!st.contains(it - 1)) {

                int count = 1;
                int x = it;

                while (st.contains(x + 1)) {
                    x = x + 1;
                    count++;
                }

                longest = Math.max(longest, count);
            }
        }

        return longest;
    }
}
